{% extends "layout.html.twig" %}

{% block title %}Contact | {{ parent() }}{% endblock %}

{% block main %}
    <main>
        <div class="container">
            <div class="row">
                <div class="col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2">
                    {% set successMessages = app.session.flashbag.get('success_messages') %}
                    {% if successMessages is not empty %}
                        <div class="alert alert-success">
                            {% for successMessage in successMessages %}
                                <i class="fa fa-check"></i>&nbsp;{{ successMessage }}
                            {% endfor %}
                        </div>
                    {% else %}
                        {% set errorMessages = app.session.flashbag.get('error_messages') %}
                        {% if errorMessages is not empty %}
                            <div class="alert alert-danger">
                                {% for errorMessage in errorMessages %}
                                    <i class="fa fa-exclamation-circle"></i>&nbsp;{{ errorMessage }}
                                {% endfor %}
                            </div>
                        {% else %}
                            <form action="{{ app.request.baseUrl ~ '/contact' }}" method="post">
                                {{ form_widget(form) }}
                                <div class="row">
                                    <div class="col-xs-8 col-xs-offset-2 col-md-4 col-md-offset-4">
                                        <button
                                                type="submit"
                                                class="btn btn-primary btn-lg btn-block">
                                            Send
                                        </button>
                                    </div>
                                </div>
                            </form>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </div>
    </main>
{% endblock %}