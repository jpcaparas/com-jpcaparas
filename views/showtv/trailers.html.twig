{% block scripts %}
    {{ parent() }}
    <script type="text/javascript">
        (function ($) {
            var $modal = $('#trailerModal');
            var $modalTitle = $modal.find('.modal-title');
            var $modalBody = $modal.find('.modal-body');
            var $trailers = $('#trailers');
            var $trailer = $trailers.find('.panel-body a');
            var ytUrl;
            var ytTitle;

            $trailer.on('click', function (e) {
                e.preventDefault();

                ytUrl = $(this).data('youtube-url');
                ytTitle = $(this).data('youtube-title');

                if (ytUrl.length) {
                    launchTrailerModal(ytUrl);
                }
            });

            function launchTrailerModal() {
                var modalBody = generateModalBody();

                $modalTitle.text(ytTitle);
                $modalBody.html(modalBody);

                $modal.modal('show');
            }

            function generateModalBody() {
                return '<iframe width="100%" height="315" src="' + ytUrl + '" frameborder="0" allowfullscreen></iframe>';
            }
        }(jQuery));
    </script>
